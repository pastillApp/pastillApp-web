# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           		controllers.Application.index

# User Login
GET     /login                              controllers.Application.login
POST    /login                              controllers.Application.authenticate
GET     /logout                             controllers.Application.logout

# User Crud
GET		/user/create					   controllers.Users.createForm(id:Long)
POST    /user/create                       controllers.Users.create
GET		/user/:id/update				   controllers.Users.updateForm(id:Long)
POST    /user/:id/update                   controllers.Users.update(id:Long)
DELETE  /user/:id                          controllers.Users.delete(id:Long)

# Contact Crud
GET     /user/:uId/contact					controllers.Contacts.listByUser(uId:Long)
GET	 	/contact/:id					    	controllers.Contacts.get(id:Long)
GET		/contact/:id/create					controllers.Contacts.createForm(id:Long)
POST    /contact/:uId/create                controllers.Contacts.create(uId:Long)
GET		/contact/:id/update					controllers.Contacts.updateForm(id:Long)
POST	/contact/:id/update					controllers.Contacts.update(id:Long)
POST  	/contact/:id/delete                 controllers.Contacts.delete(id:Long)

# Dose Crud
GET     /user/:uId/dose          			controllers.Doses.listByUser(uId:Long)
GET     /user/:uId/dose/create              controllers.Doses.createForm(uId:Long)
POST    /user/:uId/dose/create              controllers.Doses.create(uId:Long)
GET     /dose/:dId/update           		controllers.Doses.updateForm(dId:Long)
POST    /dose/:dId/update           		controllers.Doses.update(dId:Long)
POST  	/dose/:dId/delete         			controllers.Doses.delete(dId:Long)
GET  	/doses/user/:dId/retrieve/:timestamp  	controllers.Doses.retrieveDosesByUser(dId:Long, timestamp:Long)

# Manager Crud
GET     /user/:uId/manager			         controllers.Managers.listByManagee(uId:Long)
GET     /user/:uId/managee          		controllers.Managers.listByManager(uId:Long)
#POST    /manager                    		controllers.Managers.create
#PUT     /manager/:id           			controllers.Managers.update(id:Long)
#DELETE  /manager/:id          				controllers.Managers.delete(id:Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
