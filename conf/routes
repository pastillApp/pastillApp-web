# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           		controllers.Application.index

# User Login
GET     /login                              controllers.Application.login
POST    /login                              controllers.Application.authenticate
GET     /logout                             controllers.Application.logout

# User Crud
#GET     /user/:id                          controllers.Users.get(id:Long)
POST    /user                              controllers.Users.add
PUT     /user/:id                          controllers.Users.update(id:Long)
DELETE  /user/:id                          controllers.Users.delete(id:Long)

# Contact Crud
#GET	 /contact/:id					    controllers.Contacts.get(id:Long)
#POST    /contact                              controllers.Contacts.add
#PUT     /contact/:id                          controllers.Contacts.update(id:Long)
#DELETE  /contact/:id                          controllers.Contacts.delete(id:Long)

# Dose Crud
GET     /user/:uId/dose          				controllers.Doses.listByUser(uId:Long)
POST    /user/:uId/dose/                  		controllers.Doses.create(uId:Long)
GET     /dose/:dId           					controllers.Doses.get(dId:Long)
PUT     /dose/:dId           					controllers.Doses.edit(dId:Long)
DELETE  /dose/:dId           					controllers.Doses.delete(dId:Long)

# Manager Crud
#GET     /manager			         		controllers.Managers.list
#GET     /manager/:id          				controllers.Managers.get(id:Long)
#POST    /manager                    		controllers.Managers.add
#PUT     /manager/:id           			controllers.Managers.edit(id:Long)
#DELETE  /manager/:id          				controllers.Managers.delete(id:Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
